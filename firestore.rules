
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // pending_users: Allow anyone to create for registration, but deny read/update/delete from the client.
    // The Cloud Function will have admin access to read this.
    match /pending_users/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // users: Allow users to read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // wasiyat, qarz, amanat: Allow full access only to the user who owns the record.
    match /{collection}/{docId} {
      allow read, write, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
