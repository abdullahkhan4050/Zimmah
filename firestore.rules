
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can read and write to their own profile document
      allow read, write: if isOwner(userId);
    }

    // Rules for user-generated content collections
    match /{collection}/{docId} {
      // Allow read access if the user is the owner of the document
      allow read: if isOwner(resource.data.userId);
      // Allow create access for any authenticated user
      allow create: if request.auth != null;
      // Allow update and delete access if the user is the owner
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
