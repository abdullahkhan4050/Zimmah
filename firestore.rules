
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /pending_users/{userId} {
      allow read, create: if request.auth == null;
      allow delete: if request.auth != null;
    }

    match /qarz/{docId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /amanat/{docId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /wasiyat/{docId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    match /witnesses/{docId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
