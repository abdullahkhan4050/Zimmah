rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to manage their own witnesses
    match /witnesses/{witnessId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow logged-in users to manage their own wasiyat
    match /wasiyat/{wasiyatId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow logged-in users to manage their own qarz
    match /qarz/{qarzId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow logged-in users to manage their own amanat
    match /amanat/{amanatId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Pending users collection for OTP verification
    match /pending_users/{userId} {
      allow create; // Anyone can create a pending user doc during signup
      allow read, delete: if request.auth != null; // Allow cleanup/read by authenticated functions or users
    }
  }
}
